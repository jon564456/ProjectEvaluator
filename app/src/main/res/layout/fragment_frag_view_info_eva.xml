<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frag_view_info_eva">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/school_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Nombre:"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Correo:"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Grado acadÃ©mico:"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Procedencia:"
                        android:textColor="@color/secondary" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_eva_text_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Jonathan Brigido Perez"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/info_eva_text_correo"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="19011188@itsoeh.edu.mx"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/info_eva_text_grado"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Ingeniero"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/info_eva_text_procedencia"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="ITSOEH"
                        android:textColor="@color/secondary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"

        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:text="Proyectos asignados"
            android:textAlignment="center"
            android:textColor="@color/secondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/info_eva_pro_asig1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/info_eva_btn_guardar_sp1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_primary_rounded"
                        android:padding="10dp"
                        android:src="@drawable/save"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/info_eva_pro_asig2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/info_eva_btn_guardar_sp2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_primary_rounded"
                        android:padding="10dp"
                        android:src="@drawable/save"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/info_eva_pro_asig3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/info_eva_btn_guardar_sp3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_primary_rounded"
                        android:padding="10dp"
                        android:src="@drawable/save"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
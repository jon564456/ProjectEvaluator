<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.infoevaluador.InfoEvaluadorFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/card_color_identificador_proyecto"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/card_color_1"
                android:orientation="vertical"
                android:padding="10dp">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Nombre:"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Correo:"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Grado acadÃ©mico:"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Procedencia:"
                        android:textColor="@color/secondary" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_info_eva_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Jonathan Brigido Perez"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/txt_info_eva_correo"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="19011188@itsoeh.edu.mx"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/txt_info_eva_grado"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Ingeniero"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/txt_info_eva_procedencia"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="ITSOEH"
                        android:textColor="@color/secondary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/info_eva_pro_asig1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_info_evaluador_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary_rounded"
                android:fontFamily="@font/roboto_slab"
                android:text="Guardar"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
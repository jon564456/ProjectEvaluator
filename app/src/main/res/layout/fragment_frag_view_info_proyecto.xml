<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frag_view_info_eva">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/project_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="ID:"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Reponsable:"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Titulo:"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Categoría:"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Grado/Grupo:"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="INT7A101"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Jonathan Brigido Pérez"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Evaluación de proyecto"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="Integrado"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:gravity="center"
                            android:text="7A"
                            android:textAlignment="center"
                            android:textColor="@color/secondary" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:text="Integrantes de proyecto"
            android:textAlignment="center"
            android:textColor="@color/secondary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.infoevaluador.InfoEvaluadorFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/color_identificador"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/card_color_1"
                android:orientation="vertical"
                android:padding="10dp"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="ID:" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Reponsable:" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Titulo:"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Categoría:" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Grado/Grupo:"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_info_pro_clave"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="INT7A101" />

                        <TextView
                            android:id="@+id/txt_info_pro_respon"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Jonathan Brigido Pérez" />

                        <TextView
                            android:id="@+id/txt_info_pro_titulo"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Evaluación de proyecto" />

                        <TextView
                            android:id="@+id/txt_info_pro_cat"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="Integrado" />

                        <TextView
                            android:id="@+id/txt_info_pro_grado"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/roboto_slab"
                            android:text="7A" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/tag.blue"
        android:layout_width="match_parent"
        android:text="Integrantes de proyecto"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_pro_integrantes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>